<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>Cars Details</title>

  <script src="https://unpkg.com/react@17/umd/react.development.js"></script>
  <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
  <!-- Don't use this in production: -->
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .content {
      flex: 1;
      padding: 20px;
      max-width: 800px;
      margin: 0 auto;
    }

    .footer {
      background-color: #333;
      color: #fff;
      text-align: center;
      padding: 20px 0;
      position: fixed;
      bottom: 0;
      width: 100%;
    }

    h1 {
      color: #333;
      text-align: center;
      margin-top: 50px;
      font-size: 2em;
    }

    p {
      margin: 10px 0;
      text-align: center;
      font-size: 1.2em;
    }

    .header-menu {
      list-style-type: none;
      padding: 0;
      margin: 20px 0;
      text-align: center;
    }

    .header-menu li {
      display: inline-block;
      margin: 0 10px;
      font-size: 1em;
      padding: 10px;
      border-radius: 5px;
      background-color: #007BFF;
      color: #fff;
    }

    .header-menu li:hover {
      background-color: #0056b3;
      cursor: pointer;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    ul li {
      padding: 10px;
      margin-bottom: 10px;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    ul li:hover {
      transform: scale(1.02);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    ul li a {
      text-decoration: none;
      color: #333;
      font-size: 1.1em;
      display: block;
      text-align: center;
    }

    ul li a:hover {
      color: #007BFF;
    }

    .form-group {
      margin-bottom: 10px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
    }

    .form-group input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }

    .form-actions {
      text-align: center;
      margin-top: 20px;
    }

    .form-actions button {
      margin: 0 5px;
      padding: 10px 20px;
      font-size: 1em;
    }

  </style>
</head>

<body>
  <div id="root"></div>
  <script>
    window.__INITIAL_DATA__ = {{{json cars}}};
  </script>
  <script type="text/babel">

    const Detail = ({ car, onChange, onSave, onClear }) => {
      if (!car) return <div>Please select a car to view details.</div>;

      const handleChange = (e) => {
        const { name, value } = e.target;
        onChange({ ...car, [name]: value });
      };

      return (
        <div className="detail">
          <h2>Edit Car Details</h2>
          <div className="form-group">
            <label>Brand</label>
            <input type="text" name="brand" value={car.brand} onChange={handleChange} />
          </div>
          <div className="form-group">
            <label>Model</label>
            <input type="text" name="model" value={car.model} onChange={handleChange} />
          </div>
          <div className="form-group">
            <label>Year</label>
            <input type="text" name="year" value={car.year} onChange={handleChange} />
          </div>
          <div className="form-group">
            <label>Color</label>
            <input type="text" name="color" value={car.color} onChange={handleChange} />
          </div>
          <div className="form-actions">
            <button onClick={onSave}>Save</button>
            <button onClick={onClear}>Clear</button>
          </div>
        </div>
      );
    };

    const CarHome = () => {
      const [cars, setCars] = React.useState(window.__INITIAL_DATA__);
      const [selectedCar, setSelectedCar] = React.useState(null);

      const handleSelectCar = (car) => {
        setSelectedCar(car);
      };

      const handleChangeCar = (updatedCar) => {
        setSelectedCar(updatedCar);
      };

      const handleSaveCar = () => {
        setCars(cars.map(car => car._id === selectedCar._id ? selectedCar : car));
        setSelectedCar(null);
      };

      const handleClearCar = () => {
        setSelectedCar(null);
      };

      return (
        <div className="carHome">
          <div className="content">
            <ul className="header-menu">
              <li><a href="/">Home</a></li>
              <li>Add new car</li>
              <li>Edit existing car information</li>
              <li>Delete car</li>
            </ul>
            <h1>Welcome to Our Company</h1>
            <p>Explore our cars:</p>
            <ul>
              {cars.map(car => (
                <li key={car._id} onClick={() => handleSelectCar(car)}>
                  <a href="#">{car.brand} - {car.model}</a>
                </li>
              ))}
            </ul>
            <Detail car={selectedCar} onChange={handleChangeCar} onSave={handleSaveCar} onClear={handleClearCar} />
          </div>
          <footer className="footer">
            &copy; 2024 Car Inventory System
          </footer>
        </div>
      );
    };

    ReactDOM.render(
      <CarHome />,
      document.getElementById('root')
    );
  </script>
</body>

</html>
