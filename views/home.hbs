<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cars Details</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .content {
        flex: 1;
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
      }

      .footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
      }

      /* Welcome heading */
      h1 {
        color: #333;
        text-align: center;
        margin-top: 50px;
        font-size: 2em;
      }

      p {
        margin: 10px 0;
        text-align: center;
        font-size: 1.2em;
      }

      .header-menu {
        list-style-type: none;
        padding: 0;
        margin: 20px 0;
        text-align: center;
      }

      .header-menu li {
        display: inline-block;
        margin: 0 10px;
        font-size: 1em;
        padding: 10px;
        border-radius: 5px;
        background-color: #007BFF;
        color: #fff;
      }

      .header-menu li:hover {
        background-color: #0056b3;
        cursor: pointer;
      }

      ul {
        list-style-type: none;
        padding: 0;
      }

      ul li {
        padding: 10px;
        margin-bottom: 10px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, box-shadow 0.2s;
      }

      ul li:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }

      ul li a {
        text-decoration: none;
        color: #333;
        font-size: 1.1em;
        display: block;
        text-align: center;
      }

      ul li a:hover {
        color: #007BFF;
      }

    </style>
    
</head>
<body>
    <div id="root"></div>

    <script src="https://unpkg.com/react@17/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/react-router-dom@5/umd/react-router-dom.min.js"></script>
    <script src="https://unpkg.com/babel-standalone@6/babel.min.js"></script>

    <script type="text/babel">
        // Define a functional component for the header menu
        const HeaderMenu = () => (
            <ul className="header-menu">
                <li><a href="/">Home</a></li>
                <li>Add new car</li>
                <li>Edit existing car information</li>
                <li>Delete car</li>
            </ul>
        );

        // Define a functional component for each car item
        const CarItem = ({ id, brand }) => (
            <li>
                <a href={`/detail?id=${id}`}>
                    {brand} - {id}
                </a>
            </li>
        );

        // Define your main component for the home page
        const Home = () => {
            // State to store the list of cars
            const [cars, setCars] = React.useState([]);

            // Fetch data when component mounts
            React.useEffect(() => {
                fetch('/api/cars')
                    .then(response => response.json())
                    .then(data => setCars(data))
                    .catch(error => console.error('Error fetching data:', error));
            }, []);

            return (
                <div className="content">
                    <HeaderMenu />
                    <h1>Welcome to Our Company</h1>
                    <p>Explore our cars:</p>
                    <ul>
                        {cars.map(car => <CarItem key={car.id} id={car.id} brand={car.brand} />)}
                    </ul>
                </div>
            );
        };

        // Render the main component to the root element
        ReactDOM.render(
            <BrowserRouter>
                <Home />
            </BrowserRouter>,
            document.getElementById('root')
        );
    </script>

    <footer class="footer">
        &copy; 2024 car inventory System
    </footer>
</body>
</html>
